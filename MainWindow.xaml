<Window x:Class="MoNbtSearcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoNbtSearcher.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Window.DataContext>
        <local:WindowViewModel />
    </Window.DataContext>

    <Grid>
        <!-- 控件栏 主内容 信息行 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <!-- Row0.0 控件栏 -->
        <Grid Grid.Row="0" Background="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="线程数" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="75" Height="30"/>
                <TextBox x:Name="ThreadNumTextBox" Text="111" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="75" Height="30" Margin="0,0,5,0" LostFocus="ThreadNumTextBox_LostFocus" PreviewKeyDown="EnterKeyDown"/>
            </Grid>
            <Label Grid.Column="1" Content="{Binding LevelPath}" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Grid Grid.Column="2">
                <Button Content="选择" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Click="ChooseLevelButton_Click"/>
                <Button Content="加载 .MCA" x:Name="MCAButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="80,0,0,0" Click="StartButton_Click"/>
                <Button Content="搜索" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="160,0,0,0" Click="SearchButton_Click"/>
            </Grid>
        </Grid>
        <!-- Row0.1 控件栏 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <!-- Row0.1.0 展示信息栏 -->
            <Grid Grid.Column="0" Background="#DBBB">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" x:Name="ResultShowPanel" Orientation="Vertical" />
                <Grid Grid.Row="1">
                    <TextBox x:Name="PageNumTextBox" Text="{Binding NowDataPageNum}" Width="65" HorizontalAlignment="Left" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"  LostFocus="PageNumTextBox_LostFocus" PreviewKeyDown="EnterKeyDown"/>
                    <Label Content="/" Width="20" HorizontalAlignment="Right" Margin="0,0,65,0" VerticalContentAlignment="Center"/>
                    <Label Content="{Binding NowDataPageMaxNum}" Width="65" HorizontalAlignment="Right" VerticalContentAlignment="Center"/>
                </Grid>
                <TextBox x:Name="ShowPoiTextBox" Grid.Row="2" Width="150" Height="100" IsReadOnly="True"/>
            </Grid>
            <!-- Row0.1.1 内容展示栏 -->
            <TextBox  Grid.Column="1" x:Name="ShowTagTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True" Background="#DEEE"/>
            <!-- Row0.1.2 搜索设置栏 -->
            <Grid Grid.Column="2" Background="#DBBB">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="维度:" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40"/>
                    <ComboBox Name="DimComboBox" Width="180" Height="30" HorizontalAlignment="Left" Margin="55,0,0,0" SelectedIndex="0" VerticalContentAlignment="Center">
                    </ComboBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label Content="Owner:" VerticalContentAlignment="Center"/>
                        <ComboBox Name="OwnerStateComboBox" Width="90" Height="30" HorizontalAlignment="Left" Margin="55,0,0,0" SelectedIndex="-1" VerticalContentAlignment="Center" SelectionChanged="OwnerStateComboBox_SelectionChanged">
                            <ComboBoxItem Content="不启用"/>
                            <ComboBoxItem Content="配置中"/>
                            <ComboBoxItem Content="自定义"/>
                        </ComboBox>
                        <ComboBox Name="ConfigOwnerComboBox" Width="90" Height="30" HorizontalAlignment="Right" Margin="0,0,0,0" SelectedIndex="0" VerticalContentAlignment="Center" IsReadOnly="True" SelectionChanged="ConfigOwnerComboBox_SelectionChanged">
                            <ComboBoxItem Content="未启用预设" />
                        </ComboBox>
                    </Grid>
                    <TextBox x:Name="UUIDTextBox" Grid.Row="1" Text="" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="自定义NBT搜索(留空不启用)" VerticalContentAlignment="Bottom"/>
                    <TextBox Grid.Row="1" x:Name="FilterNbtIDTextBox" Text="id" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox Grid.Row="2" x:Name="FilterNbtValueTextBox" Text="touhou_little_maid:maid" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="" VerticalContentAlignment="Bottom"/>
                    <TextBox Grid.Row="1" x:Name="FilterNbtIDTextBox1" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox Grid.Row="2" x:Name="FilterNbtValueTextBox1" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="" VerticalContentAlignment="Bottom"/>
                    <TextBox Grid.Row="1" x:Name="FilterNbtIDTextBox2" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox Grid.Row="2" x:Name="FilterNbtValueTextBox2" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
        <!-- Row0.2 显示进度的 Label -->
        <Grid Grid.Row="2" Background="Gray">
            <Label Content="{Binding ReadProgress}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
